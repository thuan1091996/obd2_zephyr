&pinctrl {
    uart1_default: uart1_default {
		group1 {
			psels = <NRF_PSEL(UART_RX, 0, 3)>;
			bias-pull-up;
		};
		group2 {
			psels = <NRF_PSEL(UART_TX, 0, 2)>;
		};
	};

	uart1_sleep:
     uart1_sleep {
		group1 {
			psels = <NRF_PSEL(UART_RX, 0, 3)>,
				<NRF_PSEL(UART_TX, 0, 2)>;
			low-power-enable;
		};
	};
}; 

/ {
	chosen {
		nordic,app-uart = &uart1;
	};
};